unbind C-b
set-option -g prefix C-t
#bind s send-keys 'test'

set -g utf8
set-window-option -g utf8 on
set-window-option -g mode-keys vi
bind-key m set-option -g mouse-select-pane
set-option -g synchronize-panes off
bind e set-window-option synchronize-panes on
bind E set-window-option synchronize-panes off

# コピー
bind-key [ copy-mode
bind-key p paste-buffer

# 基本設定
set-option -g base-index 1
bind-key c new-window
bind-key -n C-M-c new-window
bind-key -n C-M-p previous-window
bind-key -n C-M-n next-window
bind Space choose-window

bind-key -n C-M-s split-window
bind-key -n M-2   split-window
bind-key -n C-M-v split-window -h
bind-key -n M-3   split-window -h

bind l resize-pane -R
bind j resize-pane -D
bind k resize-pane -U
bind h resize-pane -L

bind-key -nr M-Up    resize-pane -U 5
bind-key -nr M-Down  resize-pane -D 5
bind-key -nr M-Left  resize-pane -L 5
bind-key -nr M-Right resize-pane -R 5

bind-key -n C-M-k select-pane -U
bind-key -n C-M-j select-pane -D
bind-key -n C-M-h select-pane -L
bind-key -n C-M-l select-pane -R

#bind b break-pane
#set -g set-titles on
#set -g set-titles-string '#20(whoami)@#H:#20(pwd)'

# ステータスバーのUTF-8サポートを有効にする
set -g status-utf8 on
# ステータスバーの色を設定する
set -g status-fg white
set -g status-bg black
## 左パネルを設定する
#set -g status-left-length 40
#set -g status-left "#[fg=green]Session:#[fg=yellow][#I] "
#set -g status-left ''

## 右パネルを設定する
set -g status-right "#[fg=cyan][%Y-%m-%d(%a) %H:%M]"

# アクティブなペインを目立たせる
set -g pane-active-border-fg blue
set -g pane-active-border-bg black
# ペインボーダーの色を設定する
set -g pane-border-fg blue
set -g pane-border-bg black
#
set-window-option -g mode-bg white
set-window-option -g mode-fg black
# ウィンドウリストの色を設定する
set-window-option -g window-status-bg black
set-window-option -g window-status-fg white
# アクティブなウィンドウを目立たせる
set-window-option -g window-status-current-bg black
set-window-option -g window-status-current-fg blue
set-window-option -g window-status-current-attr bold
# コマンドラインの色を設定する
set -g message-attr bold
set -g message-fg white
set -g message-bg blue

# メモを開く
unbind s
bind-key C-s split-window 'exec vim -n ~/.memo.md'

# 設定ファイルを開く
bind-key -n C-M-e split-window -h 'exec vim -n ~/.tmux.conf'
source-file ~/.tmux.local

# 設定を再読込
bind r source-file ~/.tmux.conf \; display "tmux Reloaded!"

